<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/AM_RV_Historial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_historial_resultado"
            app:spanCount="4"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/AM_TV_Prersultado"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preresultado"/>
        <TextView
            android:id="@+id/AM_TV_Resultado"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resultado"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="@color/fondo_aplicacion">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_Clear"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="C"
                   android:textAlignment="center"
                   android:textSize="50sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_back"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_left"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_Porciento"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:src="@drawable/percentage"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_division"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <ImageView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/division"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="7"
                    android:textAlignment="center"
                    android:textSize="50sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="8"
                    android:textAlignment="center"
                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="9"
                    android:textAlignment="center"
                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_multiplicar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/multiplication" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="50sp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_resta"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/resta" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="50sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_sumar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/sumar" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_SYSTEM_OTMX"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/system_otmx" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_0"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_point"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="."
                    android:textAlignment="center"
                    android:textSize="50sp"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/Btn_resultado"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10sp"
                android:layout_weight="1"
                android:layout_margin="7dp"
                app:cardBackgroundColor="@color/btn_result">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/result"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>










</LinearLayout>